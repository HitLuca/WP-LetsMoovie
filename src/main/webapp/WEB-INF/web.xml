<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>
            database.flywayRunner
        </listener-class>
    </listener>
    <absolute-ordering/>
    <error-page>
        <error-code>404</error-code>
        <location>/404</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500</location>
    </error-page>
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- DEFINIZIONE JSP DA MAPPPARE-->
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>privacy</servlet-name>
        <jsp-file>/jsp/privacy.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>info</servlet-name>
        <jsp-file>/jsp/info.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>team</servlet-name>
        <jsp-file>/jsp/team.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>registration</servlet-name>
        <jsp-file>/jsp/registration.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>user</servlet-name>
        <jsp-file>/jsp/user.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>error404</servlet-name>
        <jsp-file>/jsp/error/404.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>error500</servlet-name>
        <jsp-file>/jsp/error/500.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>passwordRecovery</servlet-name>
        <jsp-file>/jsp/passwordRecovery.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>tester</servlet-name>
        <jsp-file>/jsp/tester.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>confirmRegistration</servlet-name>
        <jsp-file>/jsp/confirmRegistration.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>filmAndShows</servlet-name>
        <jsp-file>/jsp/film.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>choiceSeats</servlet-name>
        <jsp-file>/jsp/seats.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>payment</servlet-name>
        <jsp-file>/jsp/payment.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>admin</servlet-name>
        <jsp-file>/jsp/admin.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>showSeats</servlet-name>
        <jsp-file>/jsp/featureAdmin/showSeats.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>deleteReservation</servlet-name>
        <jsp-file>/jsp/featureAdmin/deleteReservation.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>filmCashing</servlet-name>
        <jsp-file>/jsp/featureAdmin/filmCashing.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>bestCustomer</servlet-name>
        <jsp-file>/jsp/featureAdmin/bestCustomer.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>reservedSeats</servlet-name>
        <jsp-file>/jsp/featureAdmin/reservedSeats.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>listinoPrezzi</servlet-name>
        <jsp-file>/jsp/listinoPrezzi.jsp</jsp-file>
    </servlet>


    <!-- MAPPING JPS-->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>privacy</servlet-name>
        <url-pattern>/privacy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>info</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>team</servlet-name>
        <url-pattern>/team</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>error404</servlet-name>
        <url-pattern>/404</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>error500</servlet-name>
        <url-pattern>/500</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>passwordRecovery</servlet-name>
        <url-pattern>/passwordRecovery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tester</servlet-name>
        <url-pattern>/tester/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>confirmRegistration</servlet-name>
        <url-pattern>/confirmRegistration/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>filmAndShows</servlet-name>
        <url-pattern>/film/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>choiceSeats</servlet-name>
        <url-pattern>/seats/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>payment</servlet-name>
        <url-pattern>/payment/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showSeats</servlet-name>
        <url-pattern>/admin/showSeats/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteReservation</servlet-name>
        <url-pattern>/admin/deleteReservation/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>filmCashing</servlet-name>
        <url-pattern>/admin/filmCaching/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bestCustomer</servlet-name>
        <url-pattern>/admin/bestCustomer/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reservedSeats</servlet-name>
        <url-pattern>/admin/reservedSeats/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listinoPrezzi</servlet-name>
        <url-pattern>/listinoPrezzi</url-pattern>
    </servlet-mapping>
</web-app>
