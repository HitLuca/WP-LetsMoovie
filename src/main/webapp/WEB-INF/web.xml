<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>
            database.flywayRunner
        </listener-class>
    </listener>

    <error-page>
        <error-code>404</error-code>
        <location>/404</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500</location>
    </error-page>
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- DEFINIZIONE JSP DA MAPPPARE-->
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>contattaci</servlet-name>
        <jsp-file>/jsp/contattaci.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>privacy</servlet-name>
        <jsp-file>/jsp/privacy.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>info</servlet-name>
        <jsp-file>/jsp/info.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>team</servlet-name>
        <jsp-file>/jsp/team.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>registration</servlet-name>
        <jsp-file>/jsp/registration.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>user</servlet-name>
        <jsp-file>/jsp/user.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>error404</servlet-name>
        <jsp-file>/jsp/error/404.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>error500</servlet-name>
        <jsp-file>/jsp/error/500.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>setNewPassword</servlet-name>
        <jsp-file>/jsp/setNewPassword.jsp</jsp-file>
    </servlet>

    <!-- MAPPING JPS-->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contattaci</servlet-name>
        <url-pattern>/contattaci</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>privacy</servlet-name>
        <url-pattern>/privacy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>info</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>team</servlet-name>
        <url-pattern>/team</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>error404</servlet-name>
        <url-pattern>/404</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>error500</servlet-name>
        <url-pattern>/500</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>setNewPassword</servlet-name>
        <url-pattern>/setNewPassword</url-pattern>
    </servlet-mapping>
</web-app>
